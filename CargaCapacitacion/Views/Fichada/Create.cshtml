@model CargaCapacitacion.ViewModels.FichadaPantallaViewModel

@{
    ViewData["Title"] = "Create";

}

<h1 style="color: red;">Capacitaciones</h1>

<h4>Carga de asistencias - Usuario : @ViewBag.usuario</h4>
<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Curso" class="control-label"></label>
                <select name="" id="curso" class="form-control">
                    @for (var i = 0; i < Model.Cursos.Count(); i++)
                    {
                        <option asp-for="@Model.Cursos[i].Id" >@Model.Cursos[i].Curso (@Model.Cursos[i].FechaInicio - @Model.Cursos[i].FechaFin)</option>
                    }
                </select>
                <span asp-validation-for="Curso" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Fecha" class="control-label"></label>
                <input asp-for="Fecha" class="form-control" />
                <span asp-validation-for="Fecha" class="text-danger"></span>
            </div>
            <label asp-for="Empleados" class="control-label"></label>
            <div style="width: 100%" class="row">
                @for (var i = 0; i < Model.Empleados.Count(); i++)
                {
                    <input type="hidden" asp-for="@Model.Empleados[i].Legajo" />
                    <input type="hidden" asp-for="@Model.Empleados[i].Nombre" />
                    <input type="hidden" asp-for="@Model.Empleados[i].Apellido" />
                    <p class="col-4" style="font-size:0.9em">@Model.Empleados[i].Nombre @Model.Empleados[i].Apellido (@Model.Empleados[i].Legajo)</p>
                    <input type="checkbox" asp-for="@Model.Empleados[i].IsChecked" />
                }
                <span asp-validation-for="Empleados" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}


}
